{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "env": {
      "NODE_VERSION": "18",
      "NPM_VERSION": "9"
    },
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "cmds": [
            "curl -fsSL https://deb.nodesource.com/setup_18.x | bash -",
            "apt-get install -y nodejs"
          ]
        },
        "build": {
          "cmds": [
            "cd backend && npm ci"
          ]
        }
      },
      "start": {
        "cmd": "cd backend && npm start"
      }
    }
  }
}
